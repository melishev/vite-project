{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": [".eslintrc", "vite.config.ts", "dist/**/*.js", "dist/**/*.ts", "test/**/*.ts"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unsafe-argument": "warn"
  }
}
